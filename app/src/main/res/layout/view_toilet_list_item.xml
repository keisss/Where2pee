<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:stateListAnimator="@anim/touch_raise"
    app:cardCornerRadius="1dp"
    app:cardElevation="3dp"
    tools:targetApi="lollipop">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/iv_item_toilet_list_photo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/ic_launcher"
            tools:ignore="ContentDescription" />

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:id="@+id/rating_bar_item_toilet_list"
            style="@style/Widget.MaterialRatingBar.RatingBar"
            android:layout_width="110dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/iv_item_toilet_list_photo"
            android:numStars="5"
            android:rating="2.5"
            android:stepSize="0.5" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_thumb_up_grey_24dp"
            tools:ignore="ContentDescription"
            android:id="@+id/imageView" />

        <TextView
            android:id="@+id/tv_item_toilet_list_up_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="3dp"
            tools:text="11" />

        <ImageView
            android:id="@+id/iv_item_toilet_list_down"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_thumb_down_grey_24dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_item_toilet_list_down_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginEnd="10dp"
            android:layout_marginTop="3dp"
            tools:ignore="RtlHardcoded"
            tools:text="12"
            android:layout_toEndOf="@+id/imageView" />

        <TextView
            android:id="@+id/tv_item_toilet_list_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating_bar_item_toilet_list"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/iv_item_toilet_list_photo"
            tools:text="不收费" />

        <TextView
            android:id="@+id/tv_item_toilet_list_have_paper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating_bar_item_toilet_list"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/tv_item_toilet_list_charge"
            tools:text="有手纸" />

        <TextView
            android:id="@+id/tv_item_toilet_list_wash_hand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating_bar_item_toilet_list"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/tv_item_toilet_list_have_paper"
            tools:text="可洗手" />

        <TextView
            android:id="@+id/tv_item_toilet_list_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_toilet_list_charge"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/iv_item_toilet_list_photo"
            tools:text="距离120米" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_item_toilet_list_goto"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="#1E90FF"
        android:src="@drawable/ic_directions_black_24dp" />
</android.support.v7.widget.CardView>